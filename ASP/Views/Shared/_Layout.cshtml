<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyMovieList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-dark border-bottom box-shadow ">

            <a class="navbar-brand text-white" asp-area="" asp-controller="Search" asp-action="Index">MovieSearcher</a>

            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Search" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="MovieList" asp-action="Index">List</a>
                </li>
            </ul>
            <form asp-controller="Search" asp-action="Index" class="form-inline">

                <input type="text" name="search" class="form-control" placeholder="Title">

                <input type="submit" value="Get" class="btn btn-primary" />

            </form>


        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
