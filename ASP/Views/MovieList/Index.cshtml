@{
}
@model IEnumerable<ASP.Models.Movie>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My  Movie List</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th> Poster</th>
                <th> Title</th>
                <th>  Year</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var movie in Model)
                {

                    <tr>
                        <td>  <img src=@movie.Poster /></td>
                        <td>   @movie.Title</td>
                        <td>   @movie.Year</td>
                        <td>  <a asp-controller="Info" asp-action="Index" asp-route-id="@movie.imdbID" class="btn btn-info"> More...</a></td>
                        <td><a asp-action="Delete" asp-route-id="@movie.imdbID" class="btn btn-danger"> Delete </a></td>
                    </tr>
                }
            }
        </tbody>
    </table>

</body>